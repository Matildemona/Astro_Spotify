---
const { title, text } = Astro.props;
---

<article>
  <slot />
  <h2>{title}</h2>
  <p>{text}</p>
</article>

<style>
  article {
    background-color: rgb(0, 0, 0);
    width: 150px;
    font-family: Arial, Helvetica, sans-serif;
    border-radius: 10px;
    padding: 15px;
  }
  p {
    color: rgb(141, 141, 141);
    font-size: 0.8rem;
  }
  h2 {
    color: white;
    font-size: 1rem;
  }
</style>
