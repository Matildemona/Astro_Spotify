---
const { variant, size } = Astro.props;
---

<button class={variant + " " + size}><slot /></button>

<style>
  button {
    padding: 1rem;
    border-radius: 15px;
    border-color: navajowhite;
  }
  .primary {
    background-color: royalblue;
    color: white;
  }
  .secondary {
    background-color: hotpink;
    color: white;
  }
  .small {
    font-size: 1rem;
  }
  .medium {
    font-size: 2rem;
  }
  .large {
    font-size: 3rem;
  }
</style>
